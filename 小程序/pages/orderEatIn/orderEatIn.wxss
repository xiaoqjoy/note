.order-container{
  width: 100vw;
  min-height: 100vh;
  position: relative;
  background-color: #eeeeee;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.store{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  padding: 0 28rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
  font-size: 28rpx;
  background-color: #fff;
}

.store .title{
  flex: 1;
  font-size: 32rpx;
}

.store .title>view:last-child{
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.update{
  font-weight: 600
}

.shopping{
  padding: 0 28rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.shopping-item{
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #c3c3c3
}

.shopping-item:last-child{
  border-bottom: none;
}

.shopping-item .name{
  flex: 1;
}

.flex-center{
  display: flex;
  align-items: center;
}

.shopping-item .price{
  width: 100rpx;
  text-align: right;
  color: #666;
}

.shopping-item .name>view:first-child{
  font-size: 32rpx;
}

.shopping-item .name .size{
  margin-right: 10rpx;
  color: #fe5064;
}

.shopping-item .num{
  margin: 0 60rpx;
  color: #666;
}

.add-shopping{
  flex-shrink: 0;
  margin: 20rpx 10rpx;
  display: flex;
  align-items: center;
}

.add-shopping>text{
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.add-shopping>image{
  width: 62rpx;
  height: 62rpx;
}

.delete{
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fcf0cc;
  transform: translateX(28rpx);
}

.remark{
  margin-top: 10rpx;
}

.remark-item{
  display: flex;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 28rpx;
  background-color: #fff;
  align-items: center;
  border-bottom: 2rpx solid #e5e5e5;
}

.remark-item:last-child{
  border-bottom: none;
}

.remark-item>text{
  color: #666;
  flex: 1;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.remark-item>image{
  width:14rpx;
  height:24rpx;
  margin-left: 20rpx;
}

.order-detail{
  margin: 10rpx 0 ;
  padding: 20rpx 28rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
}

.really-pay{
  font-size: 32rpx;
  color: #000;
}

.font-pink{
  color: #fe5064 !important;
}

.detail-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.detail-item:last-child{
  margin-bottom: 0;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
}

.footer .sum{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f7f7f7;
  font-size: 32rpx;
  padding-left: 28rpx; 
}

.footer .sum .total{
  color: red;
  font-size: 30rpx;
}

.footer .sum .discount{
  color: #666;
  font-size: 22rpx;
}

.footer>view:last-child{
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #ffc824;
}