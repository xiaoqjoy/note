/**index.wxss**/

.up_sendName1 {
  background: #999 !important;
  width: 152rpx !important;
  margin-left: 30rpx;
}

.up_sendName0 {
  margin-left: 84rpx;
  background: red !important;
  width: 92rpx !important;
}

.box_right_body {
  display: flex;
  justify-content: space-between;
}

page, .container_index {
  font-family: Microsoft YaHei;
  /* margin-bottom: 70px !important; */
  height: 100%;
}

.container_linkError{
  height:100%;
  background:#f5f5f5;
  text-align:center;
}
.linkerror{
  width:180px;
  height:180px;
  margin-top:30%;
}
.system_text{
  font-weight:500;
  color: #666
}
.system_bottom{
  margin-top:13px;
  width:31%;
  font-size:15px;
  background:#8794d6;
  color:#fff;
}


.slideshow {
  margin-top: -16rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  height: 62.11%;
  border-radius:5px;

}

.slideshow_img {
  width: 100%;
  height: 100%;
}

.logo_img {
  width: 64px;
  height: 64px;
  float: left;
  margin-right: 12px;
  margin-left: -6px;
}

.phone {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 33px;
  right: 18px;
}

.address_img {
  width: 15px;
  height: 18px;
  float: left;
  margin: 6px 5px 0 5px;
}

.zuo_img {
  width: 12px;
  height: 15px;
  margin-top: 9px;
  float: left;
  margin-left: 3px;
}

.logo_main {
  margin-top: -26px;
  padding-left: 12px;
  position: relative;
  margin-bottom: 12px;
  padding-bottom: 12px;
}

.logo_name {
  float: left;
}

.logo_name_top {
  color: #fff;
  font-weight: 800;
}

.cuisine {
  display: flex;
  font-size: 0.633rem;
  color: #666;
  float: right;
  margin-top: 14px;
}

.cuisine_son {
  margin-left: 5px;
}

.swiper_index {
  display: block;
  height: 100%;
  border-radius:5px;
}

.category {
  margin-top: 8px;
  padding: 3px;
  border: 1px solid red;
  font-size: 13px;
  border-radius: 3px;
  display: inline-block;
}

.address_message {
  display: inline-block;
  width: 100%;
  height: 31px;
  line-height: 31px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  background: #e7e9ea;
}

.address {
  font-size: 14px;
  /* float: left; */
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* min-width: 321px; */
}

.address_juli {
  color: red;
  font-size: 14px;
  margin-top: -1px;
  margin-left: -3%;
  float: left;
}

.starting {
  padding: 0 24rpx;
  height: 8.32%;
}

.starting_click {
  background: #e5ab40;
  color: #fff;
}

.exhibition {
  padding: 0 24rpx;
  margin-top: 22rpx;
  height: 15.56%;
}

.exhibition_son {
  display: flex;
  justify-content: space-between;
  background: #464646;
  text-align: center;
  border-radius: 9rpx;
  padding-top: 17rpx;
  padding-bottom: 18rpx;
}

.showon {
  width: 33.3333%;
}

.showon_img {
  width: 96rpx;
  height: 96rpx;
}

.showon_title {
  font-size: 0.6333rem;
  color: #dab578;
}

@media screen and (max-width: 320px) {
  /* iPhone5 css */

  .up_sendJL {
    width: 140rpx;
  }

  .category {
    margin-top: 8px !important;
  }

  .address {
    width: 71% !important;
    font-size: 13px !important;
  }

  .address_juli {
    margin-left: -2% !important;
  }

  .slideshow {
    height: 56.91%;
  }

  .exhibition {
    margin-top: 32rpx;
  }
}
