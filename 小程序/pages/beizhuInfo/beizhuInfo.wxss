.canWrite{
   display: flex;
   justify-content: center;
   margin-top:30rpx;
}
.userWrite{
   border:1rpx solid rgb(169, 169, 169);
   background: #fff;
   border-radius: 10rpx;
   font-size:26rpx;
   width:90%;
   box-sizing: border-box;
   padding:10rpx;
}
.offenUseLabelBox{
   width:100%;
   font-size:26rpx;
   color:rgb(153, 153, 153);
   display: flex;
   justify-content: center;
   margin-top:30rpx;
   box-sizing: border-box;
   padding:0 5%;
}
.offenUse{
   display: flex;
   flex-wrap: wrap;
   margin:0 auto;
   width:100%;
}
.offenUse text{
   padding:12rpx 14rpx;
