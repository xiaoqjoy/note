/* sureOrder.wxss */

page {
  background: #eee;
}

.container {
  padding: 0;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 120rpx;
  position: relative;
}

.nameAddr {
  background: #fffaed;
  width: 100%;
  height: 124rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  box-sizing: border-box;
  padding: 30rpx;
}

.bz_image {
  float: right;
}

.nameAddr_L {
  width: 100%;
  display: flex;
  align-items: center;
}

.nameAddr_L>text {
  font-size: 28rpx;
  flex: 1;
  padding-left: 10rpx;
}

.nameAddr_L>image:first-child {
  width: 26rpx;
  height: 36rpx;
}

.nameAddr_L>image:last-child, .icon-right {
  width: 14rpx;
  height: 24rpx;
}

.nameAddr_C {
  flex: 1;
  padding-left: 39rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.nameAddr_C>.bname:first-child {
  font-size: 28rpx;
  color: #333;
}

.nameAddr_C>.bname:last-child {
  font-size: 24rpx;
  color: #999;
}

.nameAddr_R {
  flex-shrink: 0;
}

.bname {
  font-size: 30rpx;
}

.baddr {
  font-size: 24rpx;
  color: #999;
}

.arrivetime {
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.arrivetime image:first-child {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.arrivetime text {
  flex: 1;
}

.arrivetime view {
  font-size: 24rpx;
  margin-right: 20rpx;
}

.payAndQuan {
  width: 100%;
  background: #fff;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.payMethod, .quan {
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.payMethod>view text, .quan>view text {
  margin-right: 20rpx;
}

.alic {
  display: flex;
  align-items: center;
}

.alic text {
  color: rgb(153, 153, 153);
}

.quan {
  border-top: 2rpx solid #e5e5e5;
}

.ordBox {
  width: 100%;
  margin-top: 30rpx;
}

.zbusbtn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #fff;
  font-size: 25rpx;
  font-weight: 600;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
}

.zbusbtn image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.zbusbtn_L, .zbusbtn_R, .zbusbtn_R view {
  display: flex;
  align-items: center;
}

.listBox {
  width: 100%;
}

.list-item {
  width: 100%;
  background: #fefcfc;
  border-bottom: 1rpx dashed rgb(195, 195, 195);
  box-sizing: border-box;
  font-size: 26rpx;
}

.list-item-ok {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx 20rpx;
}

.list-item-t {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}

.list-item-b {
  padding: 10rpx;
}

.list-item-edit {
  padding: 0rpx 24rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
  padding-right: 0rpx;
}

.list-item-edit-C {
  display: flex;
  align-items: center;
}

.sub, .add {
  height: 100%;
  font-size: 55rpx;
  color: rgb(153, 153, 153);
}

.num {
  padding: 0rpx 20rpx 0rpx;
  height: 100%;
  font-size: 36rpx;
}

.list-item-edit-R {
  background: rgb(254, 80, 100);
  color: #fff;
  height: 100%;
  display: flex;
  padding: 36rpx;
}

.list-item-edit-LB {
  display: flex;
  justify-content: space-between;
}

.list-item-edit-L {
  text-align: center;
}

.list-item-edit-LB text {
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  color: red;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.ton {
  border: 1rpx solid red;
}

.fei {
  width: 100%;
  background: #fefcfc;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.ffei, .yfei, .sfei {
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx;
}

.otherInfo {
  width: 100%;
  font-size: 30rpx;
  background: #fff;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.yc, .bz, .fp {
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.fp {
  border-top: 2rpx solid #e5e5e5;
}

.eatnum {
  display: flex;
  align-items: center;
}

.acen text {
  margin-right: 20rpx;
  color: #999;
  max-width: 100%;
  text-overflow: ellipsis;
  white-space: pre-line;
  overflow: hidden;
  word-break: break-all;
  height: 40rpx;
}

.bot {
  position: fixed;
  height: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #f7f7f7;
  justify-content: space-between;
  align-items: center;
}

.botL {
  display: flex;
  justify-content: flex-start;
  margin-left: 22rpx;
}

.botL text {
  margin-right: 25rpx;
  font-size: 30rpx;
}

.botR {
  background: red;
  color: #fff;
  font-size: 1.3rem;
  font-weight: 700;
  width: 246rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}

.nameAddr_box2 {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.addrbg {
  width: 100%;
  height: 5px;
  position: absolute;
  bottom: 0px;
  left: 0rpx;
}

.list-item-text {
  width: 187px;
}

.redd {
  font-size: 20rpx;
  color: red;
  margin-right: 16rpx;
}

.acen {
  width: 540rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
