/* pages/mine/register/register.wxss */
input{display: inline-block;overflow:visible;}
.container_register{
  text-align:center;
  background:#fff;
  min-height:1110rpx;
  font-family: Microsoft YaHei;
}
.register_bg{
  width:100%;
  height:352rpx;
}
.register_user{
  text-align:center;
  margin-top:-274rpx;
}
.register_logo{
  border-radius:50%;
  width:120rpx;
  height:120rpx;
}
.register_name{
  font-size:41rpx;
  color:#fff;
}
.activate_main_two{
  position: relative
}
.activate_phone{
  border-bottom:1px solid #ddd;
  display:flex;
  justify-content: space-between;
}
.activate_phone input{
  height:2.5rem;
  background:#fff;
  text-align:left;
  padding-left:8px;
  font-size: 28rpx;
}
.activate_YZ{
  margin-top:-1px;
  border-bottom:1px solid #ddd;
  text-align: left;
}
.activate_YZ input{
  height:2.5rem;
  text-align:left;
  padding-left:8px;
  font-size: 28rpx;
  width:170rpx;
}
.button_YZ{
  position:absolute;
  right:4px;
  top:8%;
  z-index:999;
  font-size:13px;
  background-color:#999999!important;
  color:#fff !important;
}
.activate_true{
  margin-top:80%;
}
.activate_true button{
  width:68%;
  background-color:#FFC824!important;
  color:#333333;
  font-size: 40rpx;
  border-radius: 50rpx;
}
.textred{
  color:#FE3838;
}
.tip{
   font-size: 24rpx;
   text-align: left;
   box-sizing:border-box;
   padding:12rpx 20rpx;
   color:#666666;
}
.errorTip{
   font-size:28rpx;
   color:#FE3838;
}
.canTap{
   background: #FFC824!important;
   color:#333333!important;
}