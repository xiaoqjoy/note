/* pages/mine/integral.wxss */
.on{
  color: #555!important;
}
.container_balance{
  min-height:667px;
  background:#eee;
}
.balance_header{
  position:relative;
}
.balance_header_bg{
  width:100%;
  height:163px;
}
.balance_yue{
  text-align:center;
  margin-top:-8rem;
margin-bottom:60rpx;
}
.balance_header_moneyImg{
  width:3.66667rem;
 height:3.66667rem;
}
.balance_header_money{
  font-size:1.66667rem;
  color:#fff;
}
.top_preferential{
  background:#fff;
  display:flex;
  justify-content:space-between;
  margin-top:-4px;
  padding:10px;
  color:#555;
  margin-bottom:10px;
}
.top_uping{
  display:flex;
}
.top_doing_img{
  width:10px;
  height:12px;
  margin-top:6px;
  margin-left:5px;
}
.balance_body{
  background:#fff;
}
.Online{
  display:flex;
  justify-content:space-between;
  padding:10px;
  border-bottom:1px solid #ddd;
}
.Online_balance{
  font-size:0.8rem;
}
.Online_time{
  font-size:0.76667rem;
  color:#909090;
}
.Online_down{
  font-style:normal;
  float:right;
  font-size:0.86667rem;
  color:red;
}
@media screen and (max-width: 320px) {
  .balance_yue {
  left: 40%;
  top: 2rem
}
}