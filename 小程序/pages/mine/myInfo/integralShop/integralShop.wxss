page{
  background: #EEF0F1;
  position: relative;
  height: 100%;
}
.content{
  height: 100%;
  margin-left: 5%;
}
.ticket{
  background: white;
  width: 95%;
  height: 270rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
  position: relative;
  display: inline-block;
}
.left_cont{
  width: 75%;
  height: 250rpx;
  float: left;
  text-indent: 40rpx;
  margin-top: 10rpx;
  border-right: 1px dotted #EEF0F1;
}
.title{
  font-size: 30rpx; 
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
}
.money{
  color: red;
  font-size: 40rpx;
  font-weight: bold;
  display: inline-block;
}
.extra{
  font-size: 22rpx;
  font-weight: 300;
  display: inline-block;
  vertical-align: middle;
  color: black;
}
.intro{
  font-size: 28rpx;
  margin-top: 10rpx;
  background: #FFE391;
  display: inline-block;
  text-align: center;
  padding: 6rpx 10rpx;
  margin-left: 50rpx;
  text-indent: 0rpx;
  border-radius: 15rpx;
}
.time{
  font-size: 25rpx;
  position: absolute;
  bottom: 30rpx;
}

.right_cont{
  width: 24%;
  height: 280rpx;
  float: left;
  margin-top: 40rpx;
  font-size: 25rpx;
  text-align: center;
}
.score{
  margin: 25rpx 0;
  color: red;
}
.btn{
  padding: 0 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  text-align: center;
  display: inline-block;
  background: #FFC824;
  color: black;
  margin-top: 50rpx;
}

.shadow{
  position:fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  background:rgba(0, 0, 0, 0.5);
  z-index:9;
}
.window{
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 500rpx;
  background: #F5F4F4;
  z-index: 10;
}
.close{
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #E8E7E7;
}
.close image{
  width: 30rpx;
  height: 30rpx;
  margin: 25rpx;
  float: right;
}
.ticket_box{
  background: white;
  width: 95%;
  margin: 20rpx 2.5% 0;
  border-radius: 10rpx;
  font-size: 25rpx;
  padding: 15rpx 0;
}
.btn_box{
  width: 100%;
  text-align: center;
  font-size: 25rpx;
}
.dialog{
  position:absolute;
  background:#101010;
  width:300rpx;
  height:150rpx;
  top:38%;
  left:30%;
  z-index:99;
  border-radius: 10rpx;
  color: white;
  text-align: center;
  font-size: 30rpx;
}
.dialog image{
  width: 46rpx;
  height: 46rpx;
  margin: 20rpx 127rpx;
}